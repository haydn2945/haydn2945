import tkinter as tk
import googleapiclient.discovery
import re


class YouTubeViewer(tk.Frame):
    def __init__(self, master=None):
        super().__init__(master)
        self.master.title("您的標題")
        self.pack(fill=tk.BOTH, expand=True)
        self.create_widgets()

    def create_widgets(self):
        # 輸入框架
        self.input_frame = tk.Frame(self)
        self.input_frame.pack(side="left", fill=tk.BOTH, expand=True)
        self.input_label = tk.Label(
            self.input_frame, text="輸入 YouTube 影片 URL：")
        self.input_label.pack(side="top")
        self.input_text = tk.Text(self.input_frame)
        self.input_text.pack(side="top", fill=tk.BOTH, expand=True)

        # 輸出框架
        self.output_frame = tk.Frame(self)
        self.output_frame.pack(side="right", fill=tk.BOTH, expand=True)
        self.output_label = tk.Label(self.output_frame, text="觀看次數：")
        self.output_label.pack(side="top")
        self.output_text = tk.Text(self.output_frame)
        self.output_text.pack(side="top", fill=tk.BOTH, expand=True)

        # 監聽輸入框
        self.input_text.bind("<KeyRelease>", self.on_input_change)

    def on_input_change(self, event):
        urls = self.input_text.get("1.0", "end").split('\n')
        views = self.get_views(urls)
        self.output_text.delete("1.0", "end")
        for url in urls:
            if url.strip() == "":
                self.output_text.insert("end", "N/A\n")
            elif views.get(url, None) is not None:
                self.output_text.insert("end", f"{views[url]}\n")
            else:
                self.output_text.insert("end", "N/A\n")
        if len(views) != len(urls) and urls[-1].strip() == "":
            self.output_text.delete(f"{len(urls)}.0", "end")

    def get_views(self, urls):
        api_service_name = "youtube"
        api_version = "v3"
        api_key = "AIzaSyCni9Ni10tOwjH3AtRdzNLQN8CYZHH8axk"
        youtube = googleapiclient.discovery.build(
            api_service_name, api_version, developerKey=api_key)

        views = {}
        for url in urls:
            if url.strip() == "":
                views[url] = None
            else:
                video_id = self.get_video_id(url)
                if video_id:
                    request = youtube.videos().list(part="statistics", id=video_id)
                    response = request.execute()
                    if "items" in response and len(response["items"]) > 0:
                        view_count = int(
                            response["items"][0]["statistics"]["viewCount"])
                        views[url] = view_count
                    else:
                        views[url] = None
                else:
                    views[url] = None
        return views

    def get_video_id(self, url):
        if url.strip() == "":
            return "錯誤"
        elif "youtu.be" in url:
            return url.split("/")[-1]
        else:
            match = re.search(r"(?:\?|&)v=([^&#]+)", url)
            if match:
                return match.group(1)
        return "錯誤"


if __name__ == "__main__":
    root = tk.Tk()
    root.geometry("800x600")
    app = YouTubeViewer(master=root)
    app.mainloop()
